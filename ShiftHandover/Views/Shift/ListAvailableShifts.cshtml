@model IEnumerable<ShiftHandover.Models.Shift>

@{
    var role = Context.Session.GetString("Role");
    ViewBag.Title = (role == "Admin") ? "All Shifts" : "Available Shifts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5">
    <h2 class="mb-4 text-center">
        @(Context.Session.GetString("Role") == "Admin" ? "All Shifts" : "Available Shifts")
    </h2>


    <!-- Search Bar -->
    <form asp-action="@(role == "Admin" ? "AllShifts" : "ListAvailableShifts")" method="get" class="mb-4 w-100">
        <div class="d-flex justify-content-center" style="max-width: 900px; margin: 0 auto;">
            <input type="text" name="searchTerm" class="form-control mr-2" placeholder="Search shifts..." value="@Context.Request.Query["searchTerm"]" />
            <button type="submit" class="btn btn-search mr-2">Search</button>
            <a href="@(role == "Admin" ? "/Shift/AllShifts" : "/Shift/ListAvailableShifts")" class="btn btn-secondary">Clear</a>
        </div>
    </form>





    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            No records to show.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Shift ID</th>
                        <th>Shift Type</th>
                        <th>Location</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Notes</th>
                        <th>Supervisor</th>
                        <th>Status</th>
                        @if (Context.Session.GetString("Role") == "Admin")
                        {
                            <th>Actions</th> <!-- NEW -->
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var shift in Model)
                    {
                        <tr>
                            <td>@shift.Id</td>
                            <td>@shift.ShiftType</td>
                            <td>@shift.Location</td>
                            <td>@shift.StartTime.ToString("g")</td>
                            <td>@(shift.EndTime.HasValue ? shift.EndTime.Value.ToString("g") : "N/A")</td>
                            <td>@shift.Notes</td>
                            <td>@(shift.IsClaimed ? shift.SupervisorName : "N/A")</td>
                            <td>
                                @if (shift.IsClosed)
                                {
                                    <span class="badge bg-secondary">Closed</span>
                                }
                                else if (shift.IsClaimed)
                                {
                                    <span class="badge bg-success">Claimed</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Unclaimed</span>
                                }
                            </td>

                            @if (Context.Session.GetString("Role") == "Admin")
                            {
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-controller="Shift" asp-action="ViewShift" asp-route-id="@shift.Id">
                                        View
                                    </a>
                                </td>
                            }

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
