@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <!-- Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white text-center">
                <div class="card-body">
                    <h5>Total Users</h5>
                    <h3>@ViewBag.TotalUsers</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white text-center">
                <div class="card-body">
                    <h5>Total Shifts</h5>
                    <h3>@ViewBag.TotalShifts</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-danger text-white text-center">
                <div class="card-body">
                    <h5>Total Accidents</h5>
                    <h3>@ViewBag.TotalAccidents</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row">
        <div class="col-md-6 d-flex">
            <div class="card flex-fill">
                <div class="card-header">Claimed vs Unclaimed Shifts</div>
                <div class="card-body d-flex align-items-center justify-content-center" style="height: 600px;">
                    <div id="donutchart" style="width: 100%; height: 100%;"></div>
                </div>
            </div>
        </div>

        <div class="col-md-6 d-flex">
            <div class="card flex-fill">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Shifts Over Time</span>
                    <div class="d-flex align-items-center">
                        <label for="timeFilter" class="form-label me-2 mb-0">Filter by:</label>
                        <select id="timeFilter" class="form-select form-select-sm w-auto">
                            <option value="week">Week</option>
                            <option value="month">Month</option>
                        </select>
                    </div>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center" style="height: 500px;">
                    <div id="curve_chart" style="width: 100%; height: 100%;"></div>
                </div>
            </div>
        </div>
    </div>


</div>

@section Scripts {
    <script src="https://www.gstatic.com/charts/loader.js"></script>
  
    <script>
        window.dashboardData = {
            claimed: @ViewBag.ClaimedShifts,
            unclaimed: @ViewBag.UnclaimedShifts,
            shiftDates: @Html.Raw(Json.Serialize(ViewBag.ShiftDates)),
            shiftCounts: @Html.Raw(Json.Serialize(ViewBag.ShiftCounts))
        };
    </script>
}
