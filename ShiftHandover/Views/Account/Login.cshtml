@model ShiftHandover.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="text-center mb-4">
    <img src="~/images/Shift_Handover_Logo.png" alt="Shift Handover Logo" class="login-logo" />
</div>

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary login-btn">Login</button>
    </div>


</form>

@section Scripts {
    <script>
        // If there is a normal login error
        @if (ViewBag.Message != null)
        {
            <text>
                    alert("@ViewBag.Message");
            </text>
        }

        // If there is a privilege warning
        @if (TempData["Warning"] != null)
        {
            <text>
                    alert("@TempData["Warning"]");
            </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
                <script>
                    alert('@TempData["ErrorMessage"]');
        </script>
        }

    </script>
}
