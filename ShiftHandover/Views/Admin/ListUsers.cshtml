@model IEnumerable<ShiftHandover.Models.User>

@{
    ViewBag.Title = "All Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mb-3 text-end">
    <a href="/Admin/AddUser" class="btn btn-primary">Add New User</a>
</div>

<div class="container mt-5">
    <h2 class="mb-4 text-center">All Users</h2>

    <!-- Search Bar -->
    <form asp-action="ListUsers" method="get" class="mb-4 w-100">
        <div class="d-flex justify-content-center" style="max-width: 900px; margin: 0 auto;">
            <input type="text" name="searchTerm" class="form-control mr-2" placeholder="Search users..." value="@Context.Request.Query["searchTerm"]" />
            <button type="submit" class="btn btn-search mr-2">Search</button>
            <a href="/Admin/ListUsers" class="btn btn-secondary">Clear</a>
        </div>
    </form>

    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            No users found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>User ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Department</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Department</td>
                            <td>@user.RoleTitle</td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>

                            <td>
                                <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="ViewUser" asp-route-id="@user.UserId">View</a> <!-- NEW -->
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
